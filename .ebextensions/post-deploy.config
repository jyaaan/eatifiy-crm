commands:
  create_post_dir:
    command: "mkdir /opt/elasticbeanstalk/hooks/appdeploy/post"
    ignoreErrors: true
files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/set_env_chmod.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      cd $EB_CONFIG_APP_CURRENT
      cd tmp/cookies
      su chmod a+w -R .